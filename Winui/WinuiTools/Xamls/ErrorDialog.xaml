<ContentDialog
    x:Class="WinuiTools.Xamls.ErrorDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinuiTools.Xamls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    PrimaryButtonText="Ok"
    
    x:Name="ErrrDialog"
>
    
    <!--Using horizontal stackpanel causes infinit textblock width and no wrapping-->
    <Grid>

        <FontIcon HorizontalAlignment="Left" VerticalAlignment="Top" Glyph="&#xEA39;" Margin="0,10,0,0" FontSize="35" Foreground="Red"/>
        <TextBlock Margin="45,0,0,0" TextWrapping="Wrap" Text="{x:Bind ErrorMessage, Mode=OneWay}" ></TextBlock>

    </Grid>
    

	
</ContentDialog>
